{% extends 'components/micro-modal.twig' %}

{% set id = 'login-modal' %}
{% set title = 'Login' %}

{% block modalContent %}
{% do action('woocommerce_before_customer_login_form') %}
<form method="post" class="woocommerce-form woocommerce-form-login login">
  {% do action( 'woocommerce_login_form_start' ) %}
  <p class="modal--row">
    <label for="username">{{'Email Address'|e('esc_html')}}&nbsp;<span class="required">*</span></label>
    <input type="text" class="woocommerce-Input woocommerce-Input--text input-text" name="username" id="username" autocomplete="username" value="" />
  </p>
  <p class="modal--row">
    <label for="password">{{'Password'|e('esc_html')}}&nbsp;<span class="required">*</span></label>
    <input class="woocommerce-Input woocommerce-Input--text input-text" type="password" name="password" id="password" autocomplete="current-password" />
  </p>
  <p class="modal--lostPassword">
    <a href="{{ fn('wp_lostpassword_url')|e('esc_url') }}">{{'Lost your password?'|e('esc_html')}}</a>
  </p>
  {% do action( 'woocommerce_login_form' ) %}
  <p class="modal--row">
    {{ fn('wp_nonce_field', 'woocommerce-login', 'woocommerce-login-nonce', false, false) }}
    <button type="submit" class="btn btn--light-purple" name="login" value="Log in">{{'Log in'|e('esc_html')}}</button>
    <input class="woocommerce-form__input woocommerce-form__input-checkbox" name="rememberme" type="hidden" id="rememberme" value="forever" />
  </p>
  {% do action( 'woocommerce_login_form_end' ) %}
</form>
<hr />
<div class="modal--formFooter">
  <h3 class="modal__title">Create an account</h3>
  <p>By creating an account, you will be able to checkout, keep an archive of your downloads, download tearsheets, create a trade account and more...</p>
  <button type="button" class="js-buttonSwapSignup btn btn--light-purple btn--inline" name="go_to_signup" value="Sign up">{{'Sign up'|e('esc_html')}}</button>
</div>
{% do action('woocommerce_after_customer_login_form') %}
{% endblock %}
