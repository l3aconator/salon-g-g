<nav class="woocommerce-pagination">
	<ul class="page-numbers">
    {% if pagination.prev %}
    <li><a class="prev page-numbers" href="{{ pagination.prev.link }}">←</a></li>
    {% endif %}

    {% for page in pagination.pages %}
      {% if page.current %}
	      <li><span aria-current="page" class="page-numbers current">{{ page.title }}</span></li>
      {% else %}
        <li><a class="page-numbers" href="{{ page.link }}">{{ page.title }}</a></li>
      {% endif %}
    {% endfor %}

    {% if pagination.next %}
	  <li><a class="next page-numbers" href="{{ pagination.next.link }}">→</a></li>
    {% endif %}
  </ul>
</nav>
